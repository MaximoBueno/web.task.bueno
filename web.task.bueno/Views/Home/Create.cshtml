@{
    ViewBag.Title = "Crear Usuario";
}

<main>

    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 col-sm-8">
                <div class="card border-primary px-5 py-4">
                    <form id="myForm" name="myForm" method="post" enctype="multipart/form-data"
                          action="@Url.Action("Crear", "Home")">
                        <div class="col-12">

                            <h3 class="text-center text-primary text-sm-center">Crear Cuenta</h3>


                            <div class="mb-2">
                                <label for="nombre" class="form-label form-control-sm">Nombre Completo: <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-sm"
                                       name="nombre" id="nombre" placeholder="nombre completo" required>
                            </div>

                            <div class="mb-2">
                                <label for="email" class="form-label form-control-sm">Correo: <span class="text-danger">*</span></label>
                                <input type="email" class="form-control form-control-sm"
                                       name="correo" id="correo" placeholder="correo@example.com" required>
                            </div>

                            <div class="mb-2">
                                <label for="password" class="form-label form-control-sm">Contraseña: <span class="text-danger">*</span></label>
                                <input type="password" class="form-control form-control-sm" name="clave" id="clave"
                                       value="" placeholder="clave" required>
                            </div>

                            <div class="mb-2" style='display: @(ViewBag.AllowedCaptcha ? "block" : "none") '>
                                <label for="password" class="form-label form-control-sm">Captcha: <span class="text-danger">*</span></label><br />
                                <div class="text-center">
                                    <img class="img-fluid mb-1 img-thumbnail rounded " src="@ViewBag.captcha">
                                </div>
                                <input type="text" class="form-control form-control-sm" name="captcha" id="captcha"
                                       value="" placeholder="captcha">
                            </div>

                            <div class="mb-3">
                                <button type="submit" class="btn btn-sm btn-primary w-100">Crear</button>
                            </div>

                            <div class="mb-1 text-end">
                                <a class="text-primary" href="@Url.Action("Index", "Home")">Iniciar Sesion</a>
                            </div>

                            <div class="card mb-2 bg-info text-center text-light p-1 m-1"
                                 style='display: @( TempData["estado"] != null ? "block" : "none") '>
                                Mensaje: <br />
                                @TempData["estado"]
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</main>