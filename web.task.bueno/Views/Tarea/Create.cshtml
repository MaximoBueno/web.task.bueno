@{
    ViewBag.Title = "Crear Tarea";


}

<main class="" >
    
    <div class="container">
        <h2 class="text-primary">@ViewBag.Title</h2>

        <form id="myForm" name="myForm" method="post" enctype="multipart/form-data"
              action="@Url.Action("Create", "Tarea")">

            <div class="form-group mb-2">
                <label for="titulo">Titulo:</label>
                <input type="text" class="form-control" id="titulo" name="titulo" maxlength="100"
                       placeholder="Escribir el Titulo" required>
            </div>

            <div class="form-group mb-3">
                <label for="descripcion">Descripción:</label>
                <input type="text" class="form-control" id="descripcion" name="descripcion" maxlength="200"
                       placeholder="Escribir una Descripción" required>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-sm btn-success">Guardar</button>

                <a href="@Url.Action("Index", "Tarea")" class="btn btn-sm btn-primary">Regresar</a>
            </div>

        </form>

    </div>

</main>